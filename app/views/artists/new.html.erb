<h1>アーティスト登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@artist) do |f| %>

      <%= f.label :name, "アーティスト名" %>
      <%= f.text_field :name %>

      <%= f.label :url, "公式サイト" %>
      <%= f.text_field :url %>

      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile %>

      <%= f.submit "新規登録", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
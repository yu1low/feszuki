<h1>イベント情報の編集<h1>

<h2>
<%= form_for(@event) do |f| %>
  <div class="form-group">
    <div class="pull-left">
      イベント名:
    </div>
    <%= f.text_field :name, class: "form-control", placeholder: "イベント名" %>
  </div>
  <div class="form-group">
    <div class="pull-left">
      日程：
    </div>
    <%= f.text_field :date, class: "form-control", placeholder: "日程" %>
  </div>
  <div class="form-group">
    <div class="pull-left">
      開催地：
    </div>
    <%= f.text_field :address, class: "form-control", placeholder: "開催地" %>
  </div>
  <div class="form-group">
    <div class="pull-left">
      概要：
    </div>
    <%= f.text_area :about, class: "form-control", placeholder: "概要" %>
  </div>
  <div class="form-group">
  <%= f.submit "更新", class: "btn btn-sm btn-primary" %>
<% end %>
</h2>